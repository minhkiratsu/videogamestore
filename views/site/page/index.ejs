<% include ../layout/header.ejs %>
<!-- Header End -->

<div id="maincontainer">
  <!-- Slider Start-->
  <section class="slider">
    <div class="container">
      <div class="flexslider" id="mainslider">
        <ul class="slides">
          <li>
            <img src="img/banner.vg.1.png" alt="" />
          </li>
          <li>
            <img src="img/banner.vg.2.png" alt="" />
          </li>

        </ul>
      </div>
    </div>
  </section>
  <!-- Slider End-->
  
  
  
  <!-- Featured Product-->
   <%   cate.forEach(function(ca){ var id = 0; %>
      <section id="featured" class="row mt40">
        <div class="container">
         
          <h1 class="heading1"><span class="maintext"> <%= ca.name%> </span><span class="subtext">Sản phẩm nổi bật</span></h1>
          
          <ul class="thumbnails">
            <%  product.forEach(function(pro){ if(id < 4) { if(pro.cateId == ca._id){ id ++ ; %>

                  <li class="span3">
                    <a class="prdocutname" href="product.html"> <%= pro.name %> </a>
                    <div class="thumbnail">
                      <span class="sale tooltip-test">Sale</span>
                      <a href="/chi-tiet/<%= pro.nameKhongDau%>.<%= pro._id%>.<%= pro.cateId%>.html"><img alt="" src="upload/<%= pro.img %>"></a>
                      <div class="pricetag">
                        <span class="spiral"></span><a href="/add-cart.<%= pro._id %>" class="productcart">Thêm vào giỏ hàng</a>
                        <div class="price">
                          <div class="pricenew"><%= pro.price %></div>
                        </div>
                      </div>
                    </div>
                  </li>
            <% }}})%>
           
          </ul>
          
        </div>
      </section>
  <% })%>
  <!-- Latest Product-->


<!-- Footer -->
<% include ../layout/footer.ejs %>